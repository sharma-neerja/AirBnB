<% if (success && success.length) {%>
    <div class="alert alert-success row col-6 offset-3 alert-dismissible" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error && error.length) {%>
    <div class="alert alert-danger row col-6 offset-3 alert-dismissible" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>